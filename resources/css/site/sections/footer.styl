$footer-padding-y-min = 24px
$footer-padding-y-max = 32px

body > footer

	.emblem
		img
			fluid(width, $px-160, $px-192)
			height auto

	.giraffe
		fluid(width, $px-64, $px-128)

	.group1
		wrapper-x()
		display flex
		justify-content space-between
		align-items center

	.items
		wrapper-x()
		fluid(padding-top,		$footer-padding-y-min, $footer-padding-y-max)
		fluid(padding-bottom,	$footer-padding-y-min, $footer-padding-y-max)
		background-color grey
		display grid
		gap $px-24
		grid-template-columns 1fr 1fr
		grid-template-rows auto auto
		position relative

		> *
			flex 1

		// &::after
		// 	content ""
		// 	position absolute
		// 	left 0
		// 	bottom 100%
		// 	height $px-24
		// 	width 100%
		// 	background-image url("data:image/svg+xml;base64,")
		// 	background-size cover

	@media md
		.items
			display flex
			justify-content space-between

	@media xl
		background-color grey
		position relative

		// &::after
		// 	content ""
		// 	position absolute
		// 	left 0
		// 	bottom 100%
		// 	height $px-24
		// 	width 100%
		// 	background-image url("data:image/svg+xml;base64,")
		// 	background-size cover

		.wrapper
			wrapper-x()
			fluid(padding-top,		$footer-padding-y-min, $footer-padding-y-max)
			fluid(padding-bottom,	$footer-padding-y-min, $footer-padding-y-max)
			display flex
			column-gap $px-64
			position relative

		.group1, .items
			unwrapper-x()

		.giraffe
			position absolute
			fluid(right, $wrapper-x-min, $wrapper-x-max)
			//fluid(--offset, $footer-padding-y-min, $footer-padding-y-max)
			//bottom calc( 100% + var(--offset) )	
			bottom 100%

		.items
			position initial
			flex 1
			background-color initial
			padding-top 0
			padding-bottom 0

			&::after
				content none