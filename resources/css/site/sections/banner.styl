.banner
	.wrapper
		display flex
		flex-direction column
		gap $px-16

	.titles
		wrapper-x()
		display flex
		flex-direction column
		gap $px-24

	.title
		fluid(font-size, $text-30, $text-48)
		color $blue-800
		font-family $font-display
		line-height $leading-tight

	.cover
		width 100%
		height $px-224

	@media md
		margin-top $px-192 // fixed header

		.wrapper
			wrapper-x()
			// padding-top $px-32
			// padding-bottom $px-32
			flex-direction row
			align-items center
			gap $px-64

		.titles
			unwrapper-x()
			flex 1

		.cover
			width $px-288
			height $px-288
			order 1
			
	@media xl
		margin-top $px-128 // fixed header

		.wrapper
			gap $px-128

		.cover
			width 400px
			height 400px