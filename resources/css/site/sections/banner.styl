.banner
	.wrapper
		display flex
		flex-direction column

	.titles
		wrapper-x()
		padding-top $px-20
		padding-bottom $px-20
		display flex
		flex-direction column
		gap $px-24

	.title
		fluid(font-size, $text-30, $text-48)
		color $blue-800
		font-family $font-display
		line-height $leading-tight

	.cover
		width 100%
		height $px-224

	@media md
		.wrapper
			wrapper-x()
			padding-top $px-48
			padding-bottom $px-48
			flex-direction row
			align-items center
			gap $px-64

		.titles
			unwrapper-x()
			padding 0
			flex 1

		.cover
			position relative
			width $px-288
			height $px-288
			order 1
			
			picture
				clip-path polygon(0 0, 100% 0, 100% 96%, 0% 100%)

			&::before
				background-blob(378px, 336px, circle-sm, $yellow-400)
			
	@media xl
		.wrapper
			gap $px-128

		.cover
			width 400px
			height 400px

			&::before
				width 522px
				height 462px