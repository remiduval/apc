.header__menu
	display none
	flex 1

	> ul > li:first-child
		display none

	@media lg
		display flex

	@media xl
		> ul > li:first-child
			display inherit

.header__topbar
	display none
	align-self flex-start
	align-items center
	column-gap $px-24
	
	@media lg
		display flex


