.header__menu
	justify-content center

	> ul
		display flex

		> li
			position relative

.header__dropdown
	position absolute
	z-index $zindex-popover
	left 50%
	transform translateX(-50%)
	top calc(100% + 1rem)
	height auto
	overflow hidden
	min-width $px-256
	background-color $primary-075
	border-radius $radius-lg
	overflow hidden
	box-shadow $shadow-xl