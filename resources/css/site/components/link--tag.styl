.link--tag
	display inline-flex
	font-size $text-14
	line-height $leading-tight
	font-weight 500
	padding $px-4 $px-8
	border-radius $radius
	
	&.link--primary
		font-size $text-16
		padding $px-8 $px-16

	&.link--current
		box-shadow inset 0 0 0 2px rgba(0, 0, 0, 0.3)

	&.link--red
		color $red-800
		background-color $red-200

	&.link--blue
		color $blue-800
		background-color $blue-200

	&.link--orange
		color $orange-800
		background-color $orange-200

	&.link--purple
		color $purple-800
		background-color $purple-200

	&.link--green
		color $green-800
		background-color $green-200

	&.link--yellow
		color $yellow-800
		background-color $yellow-200

a.link--tag:hover
	filter brightness(0.8)