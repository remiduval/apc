.entry
	display grid

	> *
		display grid
		border-radius $radius
		overflow hidden
		background-color $malibu-050

	> a:hover
		background-color $malibu-075

	.entry__title
		font-weight 500
		line-height $leading-snug
		color $blue-800
		font-family $font-display
		font-size $text-18

	.entry__intro
		color $blue-600

	.entry__date
		color $blue-600

	.entry__details
		display flex
		gap $px-8 $px-32
		align-items center
		padding 0 $px-24
	
	&.entry--new
		> a
			grid-template-rows $px-144 1fr auto

		.entry__content
			display flex
			flex-direction column
			gap $px-16
			padding $px-16 $px-24

		.entry__details
			justify-content space-between

		.entry__arrow
			width $px-24
			height $px-24

	&.entry--classified
		.entry__content
			padding $px-24
			background-color white

		.entry__details
			flex-wrap wrap
