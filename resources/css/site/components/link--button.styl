.link--button
	display inline-flex
	align-items center
	gap $px-8
	padding $px-8 $px-20
	color $blue-600
	background-color $malibu-050
	border-radius $radius-full

	.label
		font-weight 500
		line-height $leading-snug
		flex 1

	.icon
		svg
			width $px-20
			height $px-20

	&:hover
		background-color $malibu-075

	&.link--icon
		padding-left $px-12

	&.link--primary
		color white
		background-color $blue-500

		&:hover
			background-color $blue-600
