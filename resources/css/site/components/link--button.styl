.link--button
	display inline-flex
	align-items center
	gap $px-8
	padding $px-8 $px-20
	color white
	background-color $blue-500
	border-radius $radius-full

	.label
		font-weight 500
		line-height $leading-snug
		flex 1

	.icon
		svg
			width $px-20
			height $px-20


	&:hover
		background-color $blue-700

	&&.link--icon
		padding-left $px-12

	&.link-inverted
		color $blue-800
		background-color $blue-025

			&:hover
				background-color $blue-075

