form

	input:not([type="submit"])
	textarea
	select
		display block
		width 100%
		appearance none
		background-color white
		border solid $neutral-050 1px
		border-radius $radius
		padding $px-6 $px-12
		font-size $px-16
		line-height 1.5rem

		&::placeholder
			color $neutral-100

		&:focus
			outline none
			box-shadow 0 0 0 3px v(tone-300)
			border-color v(tone-500)

	select:not([multiple])
		background-image url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e")
		background-position right .5rem center
		background-repeat no-repeat
		background-size 1.5em 1.5em
		padding-right 2.5rem
		-webkit-print-color-adjust exact
		color-adjust exact

	.form__field
		display flex
		flex-direction column
		gap $px-4

		label
			font-size $text-14
			line-height $leading-snug
			font-weight 500
			text-transform uppercase

		.hint
			opacity .8
			font-size $text-12
			line-height $leading-tight
			//color $blue-300

		&:not(:last-child)
			margin-bottom $px-20

	// .form__field + .form__field
	// 	margin-top $px-16

	.form__section
		border-radius $radius
		border solid 2px $malibu-100
		padding $px-24

		&:not(:last-child)
			margin-bottom $px-20

	legend
		font-size $text-16
		font-weight 500
		padding 0 $px-24