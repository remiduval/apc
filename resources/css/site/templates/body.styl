body
	display grid
	grid-auto-flow column
	grid-template-rows 1fr auto // .page, footer
	min-height 100vh
	background-color $malibu-025
	color $blue-800
	font-family: $font-main
	line-height $leading-normal
	-webkit-font-smoothing antialiased // Controversial
	-moz-osx-font-smoothing grayscale // Controversial

	// https://css-tricks.com/snippets/css/prevent-long-urls-from-breaking-out-of-container/
	overflow-wrap break-word
	word-wrap break-word
	word-break break-word
	-ms-hyphens auto
	-webkit-hyphens auto
	hyphens auto

	&.body--modal
		overflow hidden

	> header
		position absolute
		z-index $zindex-fixed-element
		top $px-4
		fluid(left,	$px-12, $wrapper-x-max)		

	> footer
		margin-bottom $px-64 // fixed toggles + margin-bottom on large screens

	.toggles
		position fixed
		bottom 0
		z-index $zindex-fixed-element
		width 100%

	@media md
		grid-template-rows $px-192 1fr auto // header (fixed) .page, footer
		gap $px-64

		.page, .homepage
			grid-row-start 2

		> header
			position fixed
			top 0
			left 0
			z-index $zindex-header
			width 100%

	@media lg
		grid-template-rows $px-192 1fr auto // header (fixed) .page, footer

	@media xl
		grid-template-rows $px-128 1fr auto // header (fixed) .page, footer