.homepage__newsletter
	define-tone(yellow)

	.newsletter__wrapper
		position relative
		color v(tone-800)
		background-color v(tone-400)
		overflow hidden
		wrapper-x()
		padding-top $px-32
		padding-bottom $px-32
		display grid
		gap $px-16

		> *
			position relative

		&::before
			position absolute
			right 0
			top 50%
			transform translateY(-50%)
			content ""
			width 50%
			aspect-ratio 0.88
			background-color v(tone-100)
			clip-path url(#circle-sm)

	.newsletter__form
		display flex
		flex-direction column
		gap $px-4

	form
		display flex
		gap $px-24

		input[type="email"]
			flex 1

	.newsletter__socials
		justify-self flex-end

	.link--button
		color v(tone-800)
		background-color v(tone-400)

		&:hover
			background-color v(tone-500)

	@media lg
		.wrapper
			wrapper-x()

		.newsletter__wrapper
			border-radius $radius
			padding $px-32 $px-48
			grid-template-columns 1fr 1fr
			grid-template-rows auto auto
			gap $px-16 $px-80

		.titles
			grid-row 1 / span 2

